<div class = "row">
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <h4 class="card-title">{{title}}</h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                <button type="button" class="btn btn-secondary m-2" data-toggle="modal" data-target="#exampleCreate">Create Product</button>
                <table class="table table-hover table-striped">
                    <thead>
                    <th>Images</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Cost</th>
                    <th>Options</th>
                    </thead>
                    <tbody>
                    {{#each products}}
                        <tr>
                            <td>
                                <img class="img-show" src="/uploads/{{image}}" alt="">
                             </td>
                            <td>
                                <h4>{{ title }}</h4>
                            </td>
                            <td>
                                <p>{{description}}</p>
                            </td>
                            <td>
                                <p class="cost">{{cost}}</p>
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <form action="/admin/product/delete" method="post">
                                        <input name="id" type="hidden" value="{{id}}">
                                        <button type="submit" class="btn btn-secondary option-btn">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
