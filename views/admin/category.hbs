<div class = "row">
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <h4 class="card-title">Categories</h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                <form class="form-inline" method="post" action="/admin/category">
                    <div class="form-group">
                        <input type="text" class="form-control" name="category">
                        <button type="submit" class="btn btn-secondary">Add Category</button>
                    </div>
                </form>
                <table class="table table-hover table-striped">
                    <thead>
                    <th>Name</th>
                    <th>Options</th>
                    </thead>
                    <tbody>
                    {{#each categories}}
                    <tr>
                        <td>
                            <a href = "/admin/product/:{{id}}">{{ name }}</a>
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <form>
                                    <a href = "#" type="button" class="btn btn-secondary option-btn">Edit</a>
                                </form>
                                <form method="delete" action="/admin/category/:{{ id }}">
                                    <button class="btn btn-secondary option-btn">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>